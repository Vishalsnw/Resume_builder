# Application
REACT_APP_NAME="AI Resume Builder"
REACT_APP_VERSION="1.0.0"
REACT_APP_ENV="development" # Change to "production" for production build

# Firebase Configuration
REACT_APP_FIREBASE_API_KEY="your_firebase_api_key"
REACT_APP_FIREBASE_AUTH_DOMAIN="your-app.firebaseapp.com"
REACT_APP_FIREBASE_PROJECT_ID="your-project-id"
REACT_APP_FIREBASE_STORAGE_BUCKET="your-app.appspot.com"
REACT_APP_FIREBASE_MESSAGING_SENDER_ID="your_messaging_sender_id"
REACT_APP_FIREBASE_APP_ID="your_app_id"

# API Endpoints
REACT_APP_API_URL="http://localhost:5000" # Development API URL
# REACT_APP_API_URL="https://api.yourapp.com" # Production API URL

# HuggingFace API (for DeepSeek AI)
REACT_APP_HUGGINGFACE_API_KEY="your_huggingface_api_key"
REACT_APP_HUGGINGFACE_MODEL_URL="https://api-inference.huggingface.co/models/deepseek-ai/deepseek-large"

# Payment Gateway (Stripe)
REACT_APP_STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key"
REACT_APP_STRIPE_PRICE_ID_PRO="price_xxxxxxxxxxxxx"

# Google Analytics
REACT_APP_GA_TRACKING_ID="G-XXXXXXXXXX"

# Error Reporting
REACT_APP_SENTRY_DSN="your_sentry_dsn"

# Feature Flags
REACT_APP_ENABLE_GOOGLE_AUTH="true"
REACT_APP_ENABLE_EMAIL_AUTH="true"
REACT_APP_ENABLE_PREMIUM_FEATURES="true"
REACT_APP_ENABLE_AI_FEATURES="true"

# Rate Limiting
REACT_APP_MAX_AI_REQUESTS_PER_DAY="50"
REACT_APP_MAX_RESUMES_FREE_TIER="3"

# Cache Settings
REACT_APP_CACHE_DURATION="3600" # in seconds

# PDF Generation
REACT_APP_PDF_SERVICE_URL="http://localhost:5001"
# REACT_APP_PDF_SERVICE_URL="https://pdf.yourapp.com" # Production PDF Service URL

# Subscription Plans
REACT_APP_FREE_PLAN_NAME="Basic"
REACT_APP_PRO_PLAN_NAME="Professional"
REACT_APP_PRO_PLAN_PRICE="199"
REACT_APP_PRO_PLAN_CURRENCY="INR"

# API Timeouts
REACT_APP_API_TIMEOUT="30000" # in milliseconds

# File Upload Limits
REACT_APP_MAX_FILE_SIZE="5242880" # 5MB in bytes
REACT_APP_ALLOWED_FILE_TYPES="pdf,doc,docx"

# localStorage Keys
REACT_APP_USER_DATA_KEY="resumeBuilder_userData"
REACT_APP_AUTH_TOKEN_KEY="resumeBuilder_authToken"
REACT_APP_THEME_KEY="resumeBuilder_theme"

# Date & Locale Settings
REACT_APP_DEFAULT_TIMEZONE="UTC"
REACT_APP_DEFAULT_LOCALE="en"

# Support Contact
REACT_APP_SUPPORT_EMAIL="support@yourapp.com"
REACT_APP_HELP_URL="https://help.yourapp.com"

# Social Media
REACT_APP_TWITTER_URL="https://twitter.com/yourapp"
REACT_APP_LINKEDIN_URL="https://linkedin.com/company/yourapp"

# Security
REACT_APP_MIN_PASSWORD_LENGTH="8"
REACT_APP_PASSWORD_HASH_ROUNDS="10"
REACT_APP_JWT_EXPIRY="86400" # 24 hours in seconds

# AI Model Settings
REACT_APP_AI_MODEL_TEMPERATURE="0.7"
REACT_APP_AI_MAX_TOKENS="1000"
REACT_APP_AI_TOP_P="0.9"

# Development Tools
REACT_APP_ENABLE_REDUX_DEVTOOLS="true"
REACT_APP_ENABLE_DEBUG_LOGS="true"

# Build Settings
REACT_APP_BUILD_NUMBER=${BUILD_NUMBER}
REACT_APP_GIT_COMMIT=${GIT_COMMIT}
REACT_APP_BUILD_DATE="2025-06-07 16:53:22"
